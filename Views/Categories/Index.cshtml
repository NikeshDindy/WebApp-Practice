@using WebApp.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Category>

<h2>Categories</h2>
@if(Model != null && Model.Count() > 0)
{
    <table style="width:100%">
        <thead>
            <tr>
                <th style="text-align:left">Name</th>
                <th style="text-align:left">Description</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    @* <td><a class="btn btn-link" href="@($"/categories/edit/{category.Id}")">Edit</a></td> *@
                    <td><A class="btn btn-link" asp-controller="categories" asp-action="edit" asp-route-id="@category.Id" >Edit</A></td>
                </tr>
            }
        </tbody>
        
    </table>
}